{
  "name": "reaction-subscription-billing",
  "version": "1.0.0",
  "description": "Subscription Billing Functionality for ReactionCommerce",
  "main": "register.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "babel": {
    "plugins": [
      [
        "lodash",
        {
          "id": [
            "lodash",
            "recompose"
          ]
        }
      ],
      [
        "module-resolver",
        {
          "root": [
            "./"
          ],
          "alias": {
            "@reactioncommerce/reaction-collections": "./imports/plugins/core/collections",
            "@reactioncommerce/reaction-components": "./imports/plugins/core/components/lib",
            "@reactioncommerce/reaction-router": "./imports/plugins/core/router/lib",
            "@reactioncommerce/reaction-ui": "./imports/plugins/core/ui/client/components",
            "underscore": "lodash"
          }
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boomerdigital/reaction-subscription-billing.git"
  },
  "keywords": [
    "subscription",
    "billing",
    "recurring",
    "payments"
  ],
  "author": "Daniel Honig and Contributors",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/boomerdigital/reaction-subscription-billing/issues"
  },
  "homepage": "https://github.com/boomerdigital/reaction-subscription-billing#readme",
  "dependencies": {
    "stripe": "^5.0.0"
  }
}
